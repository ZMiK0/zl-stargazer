{
    "name": "topbar",
    "layer": "top",
    "position": "top",
    "gtk-layer-shell": true,
    "height": 34,
    "width": 1904,
    "margin-top": 8,
    "margin-left": 0,
    "modules-left": ["group/izq","group/izq2"],
    "modules-center": ["group/cen"],
    "modules-right": ["group/der"],
  

    "group/izq": {
      "orientation": "horizontal",
      "modules": ["custom/poweroff","hyprland/workspaces"]
    },

    "group/izq2": {
    "orientation": "horizontal",
    "modules": ["hyprland/window"]
    },

    "group/cen": {
      "orientation": "horizontal",
      "modules": ["clock"]
    },

    "group/der": {
      "orientation": "horizontal",
      "modules": ["cpu","memory","disk","tray","pulseaudio#sink","backlight","power-profiles-daemon","battery","custom/notificationCenter"]
    },

    "disk": {
      "path": "/",
      "format": "{specific_used:0.0f}Gb  ",
      "unit": "GB",
      "on-click": "kitty btop"
    },

    "memory": {
      "format": "{used:0.1f}Gib/{total:0.1f}Gib  " ,
      "interval": 10,
      "on-click": "kitty btop"
    },

    "cpu": {
      "format": "{usage}%  ",
      "on-click": "kitty btop"
    },
  
    "hyprland/workspaces": {
      "disable-scroll": false,
      "all-outputs": true,
      "on-click": "activate",
      "format": "{icon}",
      "format-icons": {
        "1": " ",
        "2": " ",
        "3": " ",
        "4": " "
      },
      "persistent-workspaces": {"*":[1,2,3,4]}
    },

    "hyprland/window": {
      "format": "{}",
      "rotate": 0
    },
  
    "clock": {
      "format": "{:%A, %B %e %Y, %H:%M}",
      "tooltip": false,
      "tooltip-format": "{: %A, %B %e %Y}",
      "timezone": "Europe/Madrid"
  },
  
    "pulseaudio#sink": {
      "format": "{icon}{volume}%",
      "format-muted": " ",
      "format-bluetooth": "{icon} {volume}%",
      "format-icons": {
        "headphones": [" ", " ", " "],
        "headset": [" ", " ", " "],
        "default": [" ", " ", " "]
      },
      "tooltip": false,
      "tooltip-format": "{volume}%",
      "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
      "on-click-right": "/usr/bin/pavucontrol",
      "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +0.5%",
      "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -0.5%"
    },
  
    "backlight": {
      "format": "{icon} {percent}%",
      "format-icons": ["󰃞", "󰃟", "󰃠"],
      "tooltip": false,
      "tooltip-format": "{percent}%"
    },
  
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip": true,
      "tooltip-format": "Modo: {profile}",
      "format-icons": {
        "default": "",
        "performance": "",
        "balanced": " ",
        "power-saver": "" 
      }
    },
    
    "battery": {
      "states": {
        "good": 95,
        "warning": 20,
        "critical": 10
      },
      "tooltip":false,
      "tooltip-format": "{capacity}%",
      "format": "{icon}{capacity}%",
      "format-charging": " {capacity}%",
      "format-plugged": " {capacity}%",
      "format-icons": [" ", " ", " ", " ", " "]
    },
  
    "tray": {
      "icon-size": 18,
      "spacing": 5
    },
  
    "custom/notificationCenter": {
      "on-click": "swaync-client -t -sw",
      "format": "",
      "tooltip": false
    },
  
    "custom/lock": {
      "on-click": "hyprlock",
      "format": " ",
      "tooltip": false
    },
  
    "custom/poweroff": {
      "on-click": "wlogout --protocol layer-shell",
      "format": "⏻ ",
      "tooltip": false
    }
  
  }
